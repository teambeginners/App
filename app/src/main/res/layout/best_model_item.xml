<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/proName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="Swiggy"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/offerCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/proName"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="Food and Drinks "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bestOfferDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offerCategory"
                android:layout_marginTop="10dp"
                android:text="We are giving the best ofers for you!!"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/cdOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bestOfferDetails"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:text=" Upto 20% Cd cashback avialable"
                android:textAllCaps="true"
                android:textColor="#006920"
                android:drawableLeft="@drawable/ic_money"/>

            <TextView
                android:id="@+id/success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cdOffer"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="80% Succeeded"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cdOffer"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="342 Uses Today"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/varify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/cdOffer"
                android:layout_alignParentEnd="true"
                android:drawableLeft="@drawable/ic_check"
                android:layout_marginTop="15dp"
                android:text="Vairfied Offer"
                android:visibility="gone"
                android:textColor="#08FF30"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/editors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:drawableLeft="@drawable/ic_star"
                android:text="Editor's Pick"
                android:textColor="#FF7711"
                android:textSize="12sp" />

        </RelativeLayout>
</android.support.v7.widget.CardView>
